<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:spacing="12dp">

        <TextView
            android:id="@+id/fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate Blood"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_select_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select City:"
            android:textSize="18sp"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date:"
            android:textSize="18sp"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_pick_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:background="@drawable/dark_rounded_button"
            android:textColor="@color/white"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txt_selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No date selected"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_donation_arm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Arm:"
            android:textSize="18sp"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radio_group_arm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/radio_left_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:fontFamily="@font/caviardreams"/>
            <RadioButton
                android:id="@+id/radio_right_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                android:fontFamily="@font/caviardreams"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkbox_knows_blood_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I know my blood type"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_blood_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Appointment"
            android:background="@drawable/dark_rounded_button"
            android:textColor="@color/white"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="16dp"/>

        <ListView
            android:id="@+id/list_appointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>