<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:spacing="12dp">

        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/caviardreams"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:fontFamily="@font/caviardreams"
            android:background="@drawable/dark_rounded_button"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_view_appointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Appointments"
            android:fontFamily="@font/caviardreams"
            android:background="@drawable/dark_rounded_button"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_donation_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donation History"
            android:fontFamily="@font/caviardreams"
            android:background="@drawable/dark_rounded_button"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_eligibility_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eligibility Check"
            android:fontFamily="@font/caviardreams"
            android:background="@drawable/dark_rounded_button"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_faqs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQs"
            android:fontFamily="@font/caviardreams"
            android:background="@drawable/dark_rounded_button"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>
